<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Activities.MainActivity"
    android:background="@color/colorBackground">

    <com.example.snrao.countdown.Views.CountDownView
        android:id="@+id/PrepTimerBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:text="Timer 1"
        android:id="@+id/DoTimer"
        android:layout_below="@+id/layout1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Timer 2"
        android:id="@+id/PrepTimer"
        android:textColor="@color/colorWhite"
        android:layout_below="@+id/DoTimer"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Timer 3"
        android:id="@+id/ElapsedTimer"
        android:textColor="@color/colorWhite"
        android:layout_below="@+id/PrepTimer"/>
</LinearLayout>
